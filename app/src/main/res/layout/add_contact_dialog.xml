<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/contact_name"
        style="@style/h2_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name_hint"
        android:minHeight="@dimen/min_edittext_height"
        app:layout_constraintBottom_toTopOf="@+id/contact_career"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/user_inputs_width" />

    <EditText
        android:id="@+id/contact_career"
        style="@style/h2_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/career_hint"
        android:minHeight="@dimen/min_edittext_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        app:layout_constraintWidth_percent="@dimen/user_inputs_width" />

</androidx.constraintlayout.widget.ConstraintLayout>
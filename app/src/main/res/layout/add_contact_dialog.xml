<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAddContactName"
        style="@style/TextInputLayoutDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/error_text_style"
        app:layout_constraintBottom_toTopOf="@id/tilAddContactCareer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="@dimen/email_input_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/email_input_vertical"
        app:layout_constraintWidth_percent="@dimen/user_inputs_width">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddContactName"
            style="@style/TextInputEditTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:minHeight="@dimen/min_edittext_height"
            android:paddingStart="@dimen/email_input_padding"
            android:paddingEnd="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAddContactCareer"
        style="@style/TextInputLayoutDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/error_text_style"
        app:layout_constraintBottom_toTopOf="@id/tilAddContactAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="@dimen/email_input_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilAddContactName"
        app:layout_constraintVertical_bias="@dimen/email_input_vertical"
        app:layout_constraintWidth_percent="@dimen/user_inputs_width">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddContactCareer"
            style="@style/TextInputEditTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/career_hint"
            android:inputType="text"
            android:minHeight="@dimen/min_edittext_height"
            android:paddingStart="@dimen/email_input_padding"
            android:paddingEnd="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAddContactAddress"
        style="@style/TextInputLayoutDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/error_text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="@dimen/email_input_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilAddContactCareer"
        app:layout_constraintVertical_bias="@dimen/email_input_vertical"
        app:layout_constraintWidth_percent="@dimen/user_inputs_width">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddContactAddress"
            style="@style/TextInputEditTextDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address_hint"
            android:inputType="text"
            android:minHeight="@dimen/min_edittext_height"
            android:paddingStart="@dimen/email_input_padding"
            android:paddingEnd="0dp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

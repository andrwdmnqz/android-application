<resources>
    <style name="Base.Theme.MyProject" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:navigationBarColor">@color/main_background</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@transition/slide_left</item>
        <item name="android:windowExitTransition">@transition/slide_right</item>

        <item name="android:windowSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_bounds</item>

        <item name="colorControlActivated">@color/default_text_color</item>
        <item name="searchViewStyle">@style/search_view_style</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="Theme.MyProject" parent="Base.Theme.MyProject" />
</resources>